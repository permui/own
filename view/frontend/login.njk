<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>{{ page_title }}</title>
    <link rel="stylesheet" href="/public/layui/css/layui.css">
    <link rel="stylesheet" href="/public/front-base.css">
    <link rel="stylesheet" href="/public/katex/katex.min.css">
    <style>
        .rest {
            flex: 1;
            -moz-box-flex: 1;
            -webkit-flex: 1;
            -ms-flex: 1;
        }

        #container {
            display: flex;
            flex-direction: column;
        }

        .login-wrapper {
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            height: calc(100vh - 120px);
        }

        .login-pad {
            background-color: white;
            margin: 0 auto;
            display: inline-block;
            vertical-align: middle;
            width: 22em;
            height: 22em;
            padding:3em;
        }
    </style>
</head>

<body>
    <div id="container">
        <div class="layui-header">
            <ul class="layui-nav">
                <li class="layui-nav-item">
                    <a style="font-size:30px;color:grey" href="/">own</a>
                </li>
            </ul>
            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item">
                    <a style="font-size:30px;color:grey" href="/admin">admin</a>
                </li>
            </ul>
        </div>

        <div class="rest">
            <div class="login-wrapper">
                <div class="login-pad">
                    <h1 style="color:rgb(61, 61, 61);margin:1.2em 0;">Login</h1>
                    {% if wrong %}
                    <p style="color:darkred">Please Try Again!</p>
                    {% endif %}
                    <form class="layui-form" method="POST">
                        <div class="layui-form-item">
                            <input class="layui-input" name="username" type="text" required lay-verify="required" placeholder="Username" autocomplete="off">
                        </div>
                        <div class="layui-form-item">
                            <input class="layui-input" name="password" type="password" required lay-verify="required" placeholder="Password" autocomplete="off">
                        </div>
                        <div class="layui-form-item" style="margin:3em 0;">
                            <button class="layui-btn" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/public/layui/layui.js"></script>
    <script>
        layui.use(['element','form'], () => {
            let 
                element = layui.element;
                form = layui.form;
        });
    </script>
</body>
</html>