<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>{{ page_title }}</title>
        <link rel="stylesheet" href="/public/layui/css/layui.css">
        <link rel="stylesheet" href="/public/katex/katex.min.css">
        {% block css %}
        {% endblock %}
    </head>
    <body>
        <div class="layui-layout layui-layout-admin">
            <div class="layui-header">
                <div class="layui-logo">admin</div>
                <ul class="layui-nav layui-layout-right">
                    <li class="layui-nav-item"><a href="/logout">logout</a></li>
                    <li class="layui-nav-item"><a href="/">back</a></li>
                </ul>
            </div>
            <div class="layui-side layui-bg-black">
                <div class="layui-side-scroll">
                    <ul class="layui-nav layui-nav-tree">
                        <li class="layui-nav-item layui-nav-itemed">
                            <a href="javascript:;">
                                Post
                                <span class="layui-nav-more"></span>
                            </a>
                            <dl class="layui-nav-child">
                                <dd id="newpost">
                                    <a href="/admin/newpost">New</a>
                                </dd>
                                <dd id="manpost">
                                    <a href="/admin/manpost">Manage</a>
                                </dd>
                            </dl>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="layui-body" style="padding:2em">
                {% block body %}
                <p>nothing here</p>
                {% endblock %}
            </div>
        </div>

        <script src="/public/layui/layui.js"></script>
        {% block scripts %}
        {% endblock %}
        <script>
        layui.use('element',() => {
            let element = layui.element;
        });
        </script>
    </body>
</html>